@model IEnumerable<Taxi.WebUI.ViewModels.DriverViewModel>

@{
    ViewData["Title"] = "Drivers";
}

<h1>Drivers and their car</h1>

<p>
    <a asp-action="Create">Create new</a>
    <a asp-action="GiveCar">Give car</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CallSign)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patronymic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicenseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfIssueOfDriversLicense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsSickLeave)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOnHoliday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car.GovernmentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car.YearOfIssue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CallSign)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patronymic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DriverLicenseNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfIssueOfDriversLicense)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsSickLeave)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsOnHoliday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.GovernmentNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.YearOfIssue)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>