@model Taxi.WebUI.ViewModels.DriverViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Driver</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Call sign</dt>
        <dd class = "col-sm-10" asp-display-for="CallSign"></dd>
        <dt class = "col-sm-2">Surname</dt>
        <dd class = "col-sm-10" asp-display-for="Surname"></dd>
        <dt class = "col-sm-2">Name</dt>
        <dd class = "col-sm-10" asp-display-for="Name"></dd>
        <dt class = "col-sm-2">Patronymic</dt>
        <dd class = "col-sm-10" asp-display-for="Patronymic"></dd>
        <dt class = "col-sm-2">Driver license number</dt>
        <dd class = "col-sm-10" asp-display-for="DriverLicenseNumber"></dd>
        <dt class = "col-sm-2">Date of issue of drivers license</dt>
        <dd class = "col-sm-10" asp-display-for="DateOfIssueOfDriversLicense"></dd>
        <dt class = "col-sm-2">Is sick leave</dt>
        <dd class = "col-sm-10" asp-display-for="IsSickLeave"></dd>
        <dt class = "col-sm-2">Is on holiday</dt>
        <dd class = "col-sm-10" asp-display-for="IsOnHoliday"></dd>
    </dl>
    
    <form asp-action="Delete" asp-route-id="@Model.Id">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Drivers">Back to List</a>
    </form>
</div>
