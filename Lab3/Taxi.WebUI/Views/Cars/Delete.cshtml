    ViewData["Title"] = "Delete car";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Government number
        </dt>
        <dd class="col-sm-10" asp-display-for="@Model.GovernmentNumber"></dd>
        <dt class="col-sm-2">
            Model
        </dt>
        <dd class="col-sm-10" asp-display-for="@Model.Model"></dd>
        <dt class="col-sm-2">
